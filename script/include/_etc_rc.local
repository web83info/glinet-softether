if [ "$(uci -q get switch-button.@main[0].func)" = "wifi" ]; then

	gpio_switch=$(grep -E -o "|switch-button.*(hi|lo)" /sys/kernel/debug/gpio)
	switch_position="${gpio_switch: -2}"
	logger -p notice -t wifi-toggle-init $switch_position

	# Left or clear
	if [ "$switch_position" = "lo" ]; then
		/etc/gl-switch.d/wifi.sh on
	fi

	# Right or dot
	if [ "$switch_position" = "hi" ]; then
		/etc/gl-switch.d/wifi.sh off
	fi

fi

exit 0
